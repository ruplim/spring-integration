<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

 <bean id="connectionFactory" class="com.ibm.mq.jms.MQQueueConnectionFactory">
    <property name="hostName"      value="sysmq7007"/>
    <property name="port"          value="14407"/>
    <property name="queueManager"  value="SYSMQ7007"/>
    <property name="channel"       value="GTH.SYSMQ7007.OSB"/>
    <property name="transportType" value="1"/>
  </bean> 

   <bean id="requestQueue"  class="com.ibm.mq.jms.MQQueue">
     <constructor-arg value="GTH.ERROR.UNIT1"/>
     <property name="baseQueueManagerName" value="SYSMQ7007"/>
     <property name="baseQueueName" value="GTH.ERROR.UNIT1"/>
   </bean>

   <bean id="responseQueue"  class="com.ibm.mq.jms.MQQueue">
     <constructor-arg value="GTH.FMS.ACK.IN.UNIT1"/>
     <property name="baseQueueManagerName" value="SYSMQ7007"/>
     <property name="baseQueueName" value="GTH.FMS.ACK.IN.UNIT1"/>
   </bean>

</beans>